<?xml version="1.0" encoding="utf-8"?>

<set xmlns:android="http://schemas.android.com/apk/res/android"  android:ordering="sequentially" >
    <objectAnimator
        android:duration="1000"
        android:propertyName="scaleX"
        android:valueFrom="1.0"
        android:valueTo="0.5"
        android:valueType="floatType"  android:interpolator="@android:anim/accelerate_decelerate_interpolator">
    </objectAnimator>
    <objectAnimator
        android:duration="1000"
        android:propertyName="scaleX,scaleY"
        android:valueFrom="0.5"
        android:valueTo="1.0"
        android:valueType="floatType"  android:interpolator="@android:anim/accelerate_decelerate_interpolator">
    </objectAnimator>
</set>
