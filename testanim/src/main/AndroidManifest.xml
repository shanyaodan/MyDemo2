<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" package="com.dyc.animtest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".BouncingBalls">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>

        </activity>
    </application>
    <uses-sdk tools:overrideLibrary="android.support.v7.appcompat,android.support.v4,android.support.compat,android.support.mediacompat,android.support.coreutils,android.support.coreui,android.support.fragment,android.support.graphics.drawable" />
</manifest>
